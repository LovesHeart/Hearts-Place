<view bind:tap="onTap" class="container">
  <image src="{{book.image}}"></image>
  <view class="description">
    <text class='title'>{{book.title}}<br/></text>
    <text class='author'>{{book.author}}</text>
    <view class="foot">
      <text wx:if="{{onSearchingOrnot}}" class="footer">{{book.fav_nums}} 喜欢</text>
    </view>
  </view>
</view>

